pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                    cd bus-booking-portal-frontend-repo
                    npm install
                '''
            }
        }

        stage('Build Vite App') {
            steps {
                sh '''
                    cd bus-booking-portal-frontend-repo
                    npm run build
                '''
            }
        }

        stage('Archive Build Artifacts') {
            steps {
                archiveArtifacts artifacts: 'dist/**', fingerprint: true
            }
        }
    }

    post {
        success {
            echo 'ğŸš€ CD Deployment successful'
        }
        failure {
            echo 'âŒ CD Deployment failed'
        }

        }
}

